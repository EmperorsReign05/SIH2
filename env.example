AWS_REGION=us-east-1
AWS_S3_BUCKET=blue-carbon-mrv-data

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
GRAFANA_PASSWORD=admin_password_123
PROMETHEUS_RETENTION_DAYS=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# CARBON CREDIT CONFIGURATION
# =============================================================================
# Carbon credit calculation parameters
CARBON_CONTENT_RATIO=0.47
CO2_EQUIVALENT_RATIO=3.67
MANGROVE_CREDITS_PER_SQM=2
SEAGRASS_CREDITS_PER_SQM=1
SALT_MARSH_CREDITS_PER_SQM=1

# =============================================================================
# DRONE & IMAGERY CONFIGURATION
# =============================================================================
DRONE_IMAGE_QUALITY=0.8
DRONE_IMAGE_MAX_SIZE=10485760
DRONE_IMAGE_ALLOWED_FORMATS=jpg,jpeg,png
DRONE_FLIGHT_HEIGHT=100
DRONE_OVERLAP_PERCENTAGE=70

# =============================================================================
# VERIFICATION CONFIGURATION
# =============================================================================
VERIFICATION_THRESHOLD=0.8
MIN_PHOTOS_REQUIRED=3
GPS_ACCURACY_THRESHOLD=10
SURVIVAL_RATE_MINIMUM=70

# =============================================================================
# REVENUE SHARING CONFIGURATION
# =============================================================================
DEFAULT_NGO_SHARE=40
DEFAULT_COMMUNITY_SHARE=40
DEFAULT_GOVERNMENT_SHARE=20

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_MAX_AGE=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
MOCK_BLOCKCHAIN=false
MOCK_IPFS=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DB_NAME=blue_carbon_mrv_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
COVERAGE_THRESHOLD=80

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
